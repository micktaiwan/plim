<% if @search.size > 0 %>
<% form_tag(session[:redirect_url]) do  %>
<%= render(:partial=>'search_result', :collection=>@search) %>
<br/>
<%= submit_tag("ok") %>
<% end %>

<% else %>
<%= I18n.t(:search_not_found) %>
<% end %>

<%= link_to_remote(I18n.t(:create_customer), :url=>{:action=>"new"}, :update=>:search_bar) %>

