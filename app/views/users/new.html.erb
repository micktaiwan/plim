<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login"><%= I18n.t(:account) %></label>
<%= f.text_field :login %></p>

<p><label for="email"><%= I18n.t(:email) %></label>
<%= f.text_field :email %></p>

<p><label for="password"><%= I18n.t(:pwd) %></label>
<%= f.password_field :password %></p>

<p><label for="password_confirmation"><%= I18n.t(:confirm_pwd) %></label>
<%= f.password_field :password_confirmation %></p>

<p><label for="role"><%= I18n.t(:role) %></label>
<%= select_tag(:role, options_for_select(ROLES)) %></p>

<p><label>&nbsp;</label>
<%= submit_tag I18n.t(:signup) %></p>
<% end -%>
