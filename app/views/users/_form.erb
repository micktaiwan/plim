<p><label for="name"><%= I18n.t(:person_name) %></label>
<%= text_field :user, :name %></p>

<p><label for="login"><%= I18n.t(:account) %></label>
<%= text_field :user, :login %></p>

<p><label for="email"><%= I18n.t(:email) %></label>
<%= text_field :user, :email %></p>

<p><label for="password"><%= I18n.t(:pwd) %></label>
<%= password_field :user, :password %></p>

<p><label for="password_confirmation"><%= I18n.t(:confirm_pwd) %></label>
<%= password_field :user, :password_confirmation %></p>

<p><label for="role"><%= I18n.t(:role) %></label>
<%= select(:user, :role_id, ROLES) %></p>

